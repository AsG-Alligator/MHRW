<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="NergiPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>NergiMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="NergiPart">
		<defName>EtherNergiSnout</defName>
		<label>Nergigante snout</label>
		<description>The lower part of [PAWN_nameDef]'s face has reformed into a Nergigante snout,with the signature terrifying look.</description>
		<initialSeverity>0</initialSeverity>
		<parts>
			<li>Jaw</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>new</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>17</power>
						<cooldownTime>2.6</cooldownTime>
						<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
						<chanceFactor>0.7</chanceFactor>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="NergiPart">
		<defName>EtherNergiHorns</defName>
		<description>A pair of large, thick horns crown [PAWN_nameDef]'s head.</description>
		<label>Nergigante horns</label>
		<parts>
			<li>Skull</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
					<PM_BodySize>0.5</PM_BodySize>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="NergiPart">
		<defName>EtherNergiWings</defName>
		<description>A pair of large wings have grown on [PAWN_nameDef]'s back. They are covered by numerous thorns around the "hand" joint on the top side of the wing.</description>
		<label>Nergi wings</label>
		<parts>
			<li>Torso</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
					<PM_BodySize>1.6</PM_BodySize>
					<PM_Lift>1</PM_Lift>
				</statOffsets>
				<abilities>
						<li>
							<abilityClass>Pawnmorph.Abilities.Flight</abilityClass>
							<label>Fly</label>
							<description>Fly to somewhere on the map.</description>
							<iconPath>UI/Buttons/PM_Icon_Flight</iconPath>
							<cooldown>60000</cooldown>
						</li>
				</abilities>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="NergiPart">
		<defName>EtherNergiTail</defName>
		<label>Nergigante tail</label>
		<description>A strong, spiky tail extends from the base of [PAWN_nameDef]'s spine.</description>
		<parts>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
					<PM_BodySize>0.5</PM_BodySize>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="NergiPart">
		<defName>EtherNergiSpikes</defName>
		<description>[PAWN_nameDef]'s head and their back is now peppered with hard thorns of varying size.</description>
		<label>Nergigante thorns</label>
		<parts>
			<li>Head</li>
			<li>Neck</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
					<ComfyTemperatureMin>5</ComfyTemperatureMin>
					<SocialImpact>+0.10</SocialImpact>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>	
</Defs>
