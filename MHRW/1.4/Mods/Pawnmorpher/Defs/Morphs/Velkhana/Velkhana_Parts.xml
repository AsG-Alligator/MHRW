<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="VelkhanaPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>VelkhanaMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="VelkhanaPart">
		<defName>EtherVelkhanaSnout</defName>
		<label>Velkhana snout</label>
		<description>The lower part of [PAWN_nameDef]'s face has reformed into a Velkhana snout,with large icy horn growing from the top of its nose.</description>
		<initialSeverity>0</initialSeverity>
		<parts>
			<li>Jaw</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>new</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>17</power>
						<cooldownTime>2.6</cooldownTime>
						<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
						<chanceFactor>0.7</chanceFactor>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="VelkhanaPart">
		<defName>EtherVelkhanaHorns</defName>
		<description>A number of long horns crown [PAWN_nameDef]'s head.</description>
		<label>Velkhana horns</label>
		<parts>
			<li>Skull</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
					<PM_BodySize>0.15</PM_BodySize>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="VelkhanaPart">
		<defName>EtherVelkhanaWings</defName>
		<description>A pair of large wings have grown on [PAWN_nameDef]'s back. Their tips are covered by ice.</description>
		<label>Velkhana wings</label>
		<parts>
			<li>Torso</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
					<PM_BodySize>1.1</PM_BodySize>
					<PM_Lift>1</PM_Lift>
				</statOffsets>
				<abilities>
						<li>
							<abilityClass>Pawnmorph.Abilities.Flight</abilityClass>
							<label>Fly</label>
							<description>Fly to somewhere on the map.</description>
							<iconPath>UI/Buttons/PM_Icon_Flight</iconPath>
							<cooldown>60000</cooldown>
						</li>
					</abilities>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="VelkhanaPart">
		<defName>EtherVelkhanaTail</defName>
		<label>Velkhana tail</label>
		<description>A sleek tail extends from the base of [PAWN_nameDef]'s spine, it terminates in a sharp ice spike.</description>
		<parts>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
					<PM_BodySize>0.5</PM_BodySize>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
