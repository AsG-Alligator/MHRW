<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="AptonothPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>AptonothMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="AptonothPart">
		<defName>EtherAptonothSnout</defName>
		<label>Aptonoth snout</label>
		<description>The lower part of [PAWN_nameDef]'s face has reformed into an Aptonoth snout, perfect for eating plants.</description>
		<initialSeverity>0</initialSeverity>
		<parts>
			<li>Jaw</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>new</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.40</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>8</power>
						<cooldownTime>2.6</cooldownTime>
						<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
						<chanceFactor>0.7</chanceFactor>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="AptonothPart">
		<defName>EtherAptonothCrest</defName>
		<description>[PAWN_nameDef]'s skull has elongated, forming a long crest with several spikes protruding from it.</description>
		<label>Aptonoth crest</label>
		<parts>
			<li>Head</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<!--Needs Stats-->
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="AptonothPart">
		<defName>EtherAptonothTail</defName>
		<label>Aptonoth tail</label>
		<description>A big tail of a herbivore dino, equipped with several spikes for occasional self-defense.</description>
		<parts>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
						<PM_BodySize>0.5</PM_BodySize>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
