<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>KulveTransformationMemory</defName>
        <stages>
            <li>
                <label>changed</label>
                <description>I'm a walking jewellery store exhibit... Someone will poach me for all this gold.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>Soooo shinyyyyy!!! I'm so beautiful!</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>Oh my god the gold is everywhere, and I mean EVERYWHERE!</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>I did not expect to end up as a huge gilded dragon, but here we are...</description>
                <baseMoodEffect>+1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>KulveRevertedMemory</defName>
        <stages>
            <li>
                <label>reverted</label>
                <description>Back to normal... No more gold.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>Nooo! My beautiful golden form!</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>Oh thank god...</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>I kinda enjoyed that... Oh well.</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>
