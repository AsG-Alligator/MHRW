<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="KirinPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>KirinMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="KirinPart">
		<defName>EtherKirinSnout</defName>
		<label>Kirin snout</label>
		<description>The lower part of [PAWN_nameDef]'s face has reformed into a horse-like Kirin snout, complete with thick, white fur "beard".</description>
		<initialSeverity>0</initialSeverity>
		<parts>
			<li>Jaw</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>new</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.30</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.06</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>12</power>
						<cooldownTime>2.6</cooldownTime>
						<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
						<chanceFactor>0.7</chanceFactor>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="KirinPart">
		<defName>EtherKirinHorns</defName>
		<description>A glorious shiny Kirin horn adornes the top of [PAWN_nameDef]'s head.</description>
		<label>Kirin horn</label>
		<parts>
			<li>Skull</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<!--Needs Stats-->
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="KirinPart">
		<defName>EtherKirinMane</defName>
		<description>A huge, white mane covers [PAWN_nameDef]'s head.</description>
		<label>Kirin mane</label>
		<parts>
			<li>Head</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<!--Needs Stats-->
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="KirinPart">
		<defName>EtherKirinTail</defName>
		<label>Kirin tail</label>
		<description>A short, bushy Kirin tail.</description>
		<parts>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<statOffsets>
					<PM_BodySize>0.15</PM_BodySize>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="KirinPart">
		<defName>EtherKirinEar</defName>
		<label>Kirin ear</label>
		<description>[PAWN_nameDef]'s ear has reformed into a strange horse-shaped ear, unusually covered in scales, rather than fur.</description>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<partEfficiencyOffset>0.1</partEfficiencyOffset>
			</li>
		</stages>
		<parts>
			<li>Ear</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
