<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="TobiPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>TobiMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="TobiPart">
		<defName>EtherTobiSnout</defName>
		<label>Tobi-Kadachi snout</label>
		<description>The lower part of [PAWN_nameDef]'s face has reformed into a vaguely snake-like Tobi-Kadachi snout.</description>
		<initialSeverity>0</initialSeverity>
		<parts>
			<li>Jaw</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>new</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.30</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.20</offset>
					</li>
				</capMods>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.08</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.45</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>12</power>
						<cooldownTime>2.6</cooldownTime>
						<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
						<chanceFactor>0.7</chanceFactor>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="TobiPart">
		<defName>EtherTobiTail</defName>
		<label>Tobi-Kadachi tail</label>
		<description>A wide tail, covered with numerous hard plates on the top. Kinda reminds one of a squirrel tail, if squirrels had scales.</description>
		<parts>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<!--Needs Stats-->
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	<Pawnmorph.Hediffs.MutationDef ParentName="TobiPart">
		<defName>EtherTobiFlap</defName>
		<label>Tobi-Kadachi membrane</label>
		<description>A thin skin membrane spans between [PAWN_nameDef]'s arms and legs, not unlike that of a flying squirrel.</description>
		<parts>
			<li>Torso</li>
		</parts>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<!--Needs Stats-->
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
