            <li>
                <label>Kirin face</label>
                <description>Scaled horse snout? The hell?</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Kirin face</label>
                <description>This bushy white fur beard is real cool!</description>
                <visible>true</visible>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>Kirin face</label>
                <description>What kind of hellish horse am I turning into?!</description>
                <visible>true</visible>
                <baseMoodEffect>-3</baseMoodEffect>
