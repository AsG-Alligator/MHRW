<Defs>

<!--> LONGSWORDS <-->
	<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
		<defName>MH_Longsword</defName>
		<label>Longsword</label>
		<description>The blade of this weapon is over 2 meters long. It can slash an unarmored person in half with ease. Due to its length handling this weapon is tricky and will slow the wearer down.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponMelee/MHLongsword</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>2.0</drawSize>
		</graphicData>
		<comps>
			<li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
				<eastOffset>(0.3,0,0.4)</eastOffset>
				<westOffset>(-0.3,0,0.4)</westOffset>
				<southOffset>(0.3,0,0.4)</southOffset>
				<northOffset>(0.3,0,0.4)</northOffset>
			</li>
		</comps>
		<techLevel>Medieval</techLevel>
		<costList>
			<Steel>260</Steel>
		</costList>
		<statBases>
			<WorkToMake>40000</WorkToMake>
			<Mass>2.6</Mass>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.4</MoveSpeed>
		</equippedStatOffsets>
		<equippedAngleOffset>0</equippedAngleOffset>
		<tools>
			<li>
				<label>vertical slash</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>10</power>
				<cooldownTime>3.2</cooldownTime>
			</li>
			<li>
				<label>thrust</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>10</power>
				<cooldownTime>3.2</cooldownTime>
			</li>
			<li>
				<label>rising slash</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>10</power>
				<cooldownTime>3.2</cooldownTime>
			</li>
		</tools>
		<recipeMaker>
			<researchPrerequisite>MHSwordTier1</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<recipeUsers>
                <li>MHSmithy</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>
	
