<Defs>

<!--> SWORD AND SHIELDS <-->

	<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
		<defName>MH_SwordandShield</defName>
		<label>Hunter Sword</label>
		<description>A more reasonably-sized hunter weapon. The bread and butter of a beginner hunter!</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponMelee/MHSword</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.3</drawSize>
		</graphicData>
		<comps>
			<li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
				<eastOffset>(0.1,0.2,0.1)</eastOffset>
				<westOffset>(-0.1,-0.2,0.1)</westOffset>
				<southOffset>(0,0.8,0.1)</southOffset>
				<northOffset>(0,0,0.1)</northOffset>
			</li>
		</comps>
		<modExtensions>
                <li Class="VFECore.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
				</li>
        </modExtensions>
		<techLevel>Medieval</techLevel>
		<costList>
			<Steel>60</Steel>
		</costList>
		<statBases>
			<WorkToMake>40000</WorkToMake>
			<Mass>1.9</Mass>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.2</MoveSpeed>
		</equippedStatOffsets>
		<equippedAngleOffset>0</equippedAngleOffset>
		<tools>
			<li>
				<label>lateral slash</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2.0</cooldownTime>
			</li>
			<li>
				<label>chop</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2.0</cooldownTime>
			</li>
			<li>
				<label>side slash</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2.0</cooldownTime>
			</li>
			<li>
				<label>shield bash</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2.0</cooldownTime>
			</li>
		</tools>
		<recipeMaker>
			<researchPrerequisite>MHSwordTier1</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<recipeUsers>
                <li>MHSmithy</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>


